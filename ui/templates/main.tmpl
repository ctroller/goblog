<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>My Cool Blog | {{ template "title" .Data }}</title>
    <link rel="stylesheet" href="/static/css/tailwind.css" />
    <script
      defer
      src="https://cdn.jsdelivr.net/npm/alpinejs@3.x.x/dist/cdn.min.js"
    ></script>
    <script src="https://unpkg.com/htmx.org@2.0.1"></script>

    {{ if and (.CSSFiles) (gt (len .CSSFiles) 0) }}
      {{ range .CSSFiles }}
        <link rel="stylesheet" href="{{ .Link }}" />
      {{ end }}
    {{ end }}
    {{ if and (.HeaderJSScripts) (gt (len .HeaderJSScripts) 0) }}
      {{ range .HeaderJSScripts }}
        <script src="{{ .Link }}"></script>
      {{ end }}
    {{ end }}
  </head>

  <body class="bg-gray-50">
    <div class="container mx-auto px-4 py-8">
      <h1 class="text-4xl font-bold text-center my-12 text-gray-800">
        Ramblings
      </h1>

      <nav class="max-w-4xl mx-auto mb-2 p-3 bg-white rounded-lg shadow">
        {{ template "breadcrumb" .Breadcrumb }}
      </nav>
      <main class="max-w-4xl mx-auto mb-10 p-5 bg-white rounded-lg shadow">
        {{ template "content" .Data }}
      </main>
    </div>
    {{ if and (.BodyJSScripts) (gt (len .BodyJSScripts) 0) }}
      {{ range .BodyJSScripts }}
    <script{{ if .Link }} src="{{ .Link }}"{{end}}{{ if .Async }} defer="true"{{end}}>{{ if .Content }}{{ .Content }}{{ end }}</script>
      {{ end }}
    {{ end }}
  </body>
</html>
