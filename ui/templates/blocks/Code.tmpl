<div class="flex flex-col mb-6">
  <div class="ml-auto hljs rounded-tl-lg">
    <small class="uppercase font-bold text-xs px-2 text-white">
      <span class="sr-only">Language:</span>{{ .Language }}
    </small>
  </div>
  <div class="relative">
    <button
      class="hljs-copy absolute top-1 text-xs font-bold uppercase right-0 m-2 p-1 pl-2 pr-2 cursor-pointer text-white border-green-500 rounded-lg border hover:bg-green-500 hover:text-black"
    >
      Copy
    </button>
    <pre
      class="shadow-3xl text-sm overflow-hidden code-container my-0"
    ><code class="rounded-lg rounded-tr-none language-{{ .Language }}">{{ .Content }}</code></pre>
  </div>
</div>
